 {
    "settings": {
        "index": {
            "number_of_shards": 3,
            "number_of_replicas": 2
        },
        "analysis": {
            "normalizer": {
                "standard_lowercase": {
                    "type": "custom",
                    "filter": ["lowercase"]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "name": {
                "type": "text"
            },
            "city": {
                "type": "keyword"
            },
            "description": {
                "type": "text"
            },
            "topic": {
                "type": "text",
                "analyser": "simple",
                "fields": {
                    "keyword":{
                        "type": "keyword",
                        "normalizer": "standard_lowercase"
                    }
                }
            },
            "dateTime": {
                "type": "date"
            }
        }
    }
}


